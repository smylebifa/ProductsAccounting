@model ProductsAccountingNew.Models.User;

@{
    ViewBag.Title = "Пользователи";
    Layout = "_Layout";
}

<style>
    a.nav-link.users {
        color: #ffc107;
    }
</style>

<div class="row">
    <div class="col-sm-4">
        <h3>Пользователи системы</h3>
    </div>

    <div class="col-sm-4" style="margin: auto;">
        <h5><a asp-controller="Users" asp-action="User">Добавить пользователя</a></h5>
    </div>

    <div class="col-sm-4"></div>

</div>

<br>

<div id="modDialog" class="modal fade">
    <div id="dialogContent" class="modal-dialog"></div>
</div>

<table class="table table-hover" style="text-align: center;">

    <thead class="thead-dark">
        <tr>
            <th scope="col">Логин</th>
            <th scope="col">ФИО пользователя</th>
            <th scope="col">Почта</th>
            <th scope="col">Баланс</th>
            <th scope="col"></th>
            <th scope="col"></th>
        </tr>
    </thead>

    <tbody>
        @foreach (var user in @ViewBag.Users)
        {
            <tr>
                <td>@user.Login</td>
                <td>@user.FullName</td>
                <td>@user.Email</td>
                <td>@user.Cash</td>
                <td>@Html.ActionLink("изменить", "ChangingUser", new { id = user.Id})</td>
                <td><a onclick="deleteUser('@user.Id')" href="#"> удалить </a></td>
            </tr>
        }
    </tbody>
</table>


<script type="text/javascript">
    function deleteUser(userId) {
        $.ajax({
            url: '/delete/' + userId,
            type: 'DELETE',
            contentType: "application/json; charset=utf-8",
            success: function () {
                location.reload()
            },
            error: function () {
                alert("Всё сломалось!!!")
            }
        })
    }
</script>
